<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tooltip_frame_layout"
    android:clipChildren="false"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_tooltip"
        android:elevation="3dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/clubCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Club Code: 0040862000"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:id="@+id/userCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baseer Singh: 0040862000, \n140706000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clubCode"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>