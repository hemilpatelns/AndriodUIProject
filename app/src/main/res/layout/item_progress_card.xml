<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/yearlyDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:paddingHorizontal="15dp"
            android:text="FY 24-25"
            android:textFontWeight="600"
            app:layout_constraintBottom_toTopOf="@+id/topDottedLine"
            app:layout_constraintEnd_toStartOf="@id/currentDate"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As on 12 Jun'24"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/topDottedLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/yearlyDuration"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/topDottedLine"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="15dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentDate" />

        <TextView
            android:id="@+id/campaignName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Comm. Lines Quartely Campaign"
            android:textSize="20sp"
            android:textColor="@color/primaryBlue"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/progressGuidelineEnd"
            app:layout_constraintStart_toStartOf="@id/progressGuidelineBegin"
            app:layout_constraintTop_toBottomOf="@id/topDottedLine" />

        <include
            android:id="@+id/targetLayout"
            layout="@layout/item_target_premium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/circularProgressIndicator"
            app:layout_constraintStart_toStartOf="@id/progressGuidelineBegin"
            app:layout_constraintTop_toTopOf="@id/circularProgressIndicator">


        </include>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/circularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginVertical="10dp"
            android:progress="25"
            app:indicatorColor="@color/progressGreen"
            app:indicatorSize="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/campaignName"
            app:trackColor="@color/dottedLine"
            app:trackCornerRadius="5dp"
            app:trackThickness="7dp" />

        <ImageView
            android:id="@+id/imageInsideProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/circularProgressIndicator"
            app:layout_constraintStart_toStartOf="@id/circularProgressIndicator"
            app:layout_constraintEnd_toEndOf="@id/circularProgressIndicator"
            app:layout_constraintBottom_toBottomOf="@id/circularProgressIndicator"
            android:src="@drawable/ic_health_blue"/>

        <include
            android:id="@+id/earnedLayout"
            layout="@layout/item_earned_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/circularProgressIndicator"
            app:layout_constraintEnd_toEndOf="@id/progressGuidelineEnd"
            app:layout_constraintTop_toTopOf="@id/circularProgressIndicator"/>

        <include
            android:id="@+id/clubGold"
            layout="@layout/item_club_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/circularProgressIndicator"
            app:layout_constraintStart_toStartOf="@id/progressGuidelineBegin"
            app:layout_constraintEnd_toEndOf="@id/progressGuidelineEnd"/>

        <TextView
            android:id="@+id/bottomDottedLine"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintTop_toBottomOf="@id/clubGold"
            android:layout_marginVertical="10dp" />

        <TextView
            android:id="@+id/eligibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Not Eligible"
            app:drawableStartCompat="@drawable/ic_not_eligible"
            android:drawablePadding="5dp"
            app:layout_constraintEnd_toEndOf="@id/bottomDottedLine"
            app:layout_constraintStart_toStartOf="@id/bottomDottedLine"
            app:layout_constraintBottom_toBottomOf="@id/bottomDottedLine"
            app:layout_constraintTop_toTopOf="@id/bottomDottedLine"
            android:paddingVertical="10dp"
            android:paddingHorizontal="2dp"/>

        <include
            android:id="@+id/linearProgressBarItem"
            layout="@layout/item_linear_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/eligibility"
            app:layout_constraintStart_toStartOf="@id/progressGuidelineBegin"
            app:layout_constraintEnd_toEndOf="@id/progressGuidelineEnd"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/progressGuidelineBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/progressGuidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>