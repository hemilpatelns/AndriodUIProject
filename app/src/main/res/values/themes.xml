<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UITask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BSCard" parent="">
        <item name="android:textFontWeight" tools:targetApi="p">550</item>
        <item name="android:textColor">#071E54</item>
    </style>

    <style name="ProgressCard" parent="">
        <item name="android:textFontWeight" tools:targetApi="p">550</item>
        <item name="android:textColor">#2bb445</item>
    </style>

    <style name="CircularShape" parent="">
        <item name="cornerSize">50%</item>
    </style>

<!--    Text Customization  -->
    <style name="headerStyle" parent="">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="smallText" parent="">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="targetAndEarnedSmall" parent="">
        <item name="android:textSize">12sp</item>
    </style>
</resources>